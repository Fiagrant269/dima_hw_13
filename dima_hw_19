task 1
let planets = {
    mercury: { name: "Меркурий", diameter: 4879, distance: 58 },
    venus:   { name: "Венера",   diameter: 12104, distance: 108 },
    earth:   { name: "Земля",    diameter: 12742, distance: 150 },
    mars:    { name: "Марс",     diameter: 6779, distance: 228 }
};
for (let key in planets) {
    let planet = planets[key];

    console.log("Планета:", planet.name);
    console.log("Диаметр:", planet.diameter, "км");
    console.log("Расстояние от Солнца:", planet.distance, "млн км");
    console.log("----------------------");
}
